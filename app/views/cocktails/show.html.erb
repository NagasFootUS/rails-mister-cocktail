<div class="container">
  <div class="mycard-category">
<div class="container myshow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h1><strong><%= @cocktail.name %></strong></h1>
      <h2>Ingredients</h2>
      <% @cocktail.doses.each do |dose| %>
        <ul class="list-unstyled">
          <li>
            <strong><%= dose.ingredient.name %></strong>
            <%= dose.description %>
            <%= link_to(dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }) do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </li>
        </ul>
      <% end %>
  <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
  <div><%= link_to "Back to index", cocktails_path %></div>
</div>
</div>
</div>

