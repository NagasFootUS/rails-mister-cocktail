<div class="container">
  <h1 class="title">My Cocktails</h1>
<div class="cards">
      <% @cocktails.each do |cocktail| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
        <p> <%= link_to "#{cocktail.name}", cocktail_path(cocktail) %></p>
        </div>
      <% end %>

</div>
<div class="footer">
  <div class="btn"><%= link_to "New Cocktail", new_cocktail_path %></div>
</div>

</div>
